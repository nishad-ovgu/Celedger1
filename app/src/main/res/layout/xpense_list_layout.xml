<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginVertical="2dp">
    //CHANGE THE CONSTRAINT LAYOUT TO LINEAR LAYOUT
    //THIS LAYOUT IS A PART OF THE RECYCLER VIEW(SCROLLABLE CONTENT)

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    //IMAGE (OPTIONAL)
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/ic_launcher"
       android:id="@+id/imgicon"
       android:layout_gravity="center_vertical"
       />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    //PURPOSE OF EXPENSE
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="Expense"
        android:textSize="16sp"
        android:padding="8dp"
        android:paddingLeft="16dp"
        android:id="@+id/Xpnsetitle"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="8dp"
        android:paddingLeft="16dp"
        android:text="Date"
        android:id="@+id/xpnsedte"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="8dp"
        android:paddingLeft="16dp"
        android:text="Payment Method"
        android:id="@+id/xpnsepm"
        />
</LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xp_amt"
        android:layout_weight="1"
        android:text="0.00â‚¬"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textAlignment="viewEnd"
        card_view:ignore="RtlCompat"
        android:paddingRight="42dp"/>
</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>